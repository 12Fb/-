/* pages/firstPage/首页.wxss */
.container{
  height: 100vh;
  overflow: scroll;
}
.funList{
  display: flex;
  gap: 40rpx;
  padding: 30rpx;
  justify-content:space-around;
}
.bt_class{
  width:200rpx;
  height: 200rpx;
}
.icon_container{
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}
.icon_bg{
  background:#ffffff ;
  opacity: 0.8;
}
.tap_bg{
  background:#2e2e2e
}
.tabs{
  height: 100% ;
  background:#636b7a31;
  display: flex;
  flex-direction: column;
}
.nav-class{
  display: flex;
  margin-right: 200rpx;
}
.tab-class{
  font-size: 25rpx !important;
}
.tab-active-class{
font-size: 30rpx !important;
font-weight: bolder !important;
}
.tabContent{
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding:40rpx 0;
}
.content{
  position: relative;
  min-height: fit-content;
  height: 100%;
}
.add{
  position:absolute;
  right: 25rpx;
  top: 18rpx;
  z-index: 1000;
  background: rgba(176, 210, 241,0.6);
  width: 90rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10%;
}
