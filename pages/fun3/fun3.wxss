fun3{
  --text-font: 20rem;
}

.container{
  height: 100vh;
  width: 100vw;
  overflow-y: scroll;

}
.bt{
  padding: 10px;
  border-radius: 5%;
  background: rgba(36, 36, 36,0.2);
  font-size:2rem;
  width:fit-content;
  height: 3rem;
}
.bt:hover{
  background: rgba(36, 36, 36,0.4);

}
.title{
  font-size: 40px;
  font-weight: 700;
  position:absolute;
  top:5%;
}
.row1{
  width:90%;
  padding: 1vh;
  border:2px solid red;
  display: flex;
  justify-content: start;
  align-items: center;
  gap:5vh;
  font-size: 1.5rem;
}
.row1 text :nth-child(1){
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  background: skyblue;
}

.input{
  width: 100%;
  height: 100%;
  text-align: start;
}