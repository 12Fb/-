fun3{
  --text-font: 20rem;
}

.container{
  height: 100vh;
  width: 100vw;
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.bt{
  padding: 1rem;
  border-radius: 5%;
  background: rgba(36, 36, 36,0.2);
  font-size:2rem;
  width:20rem;
  line-height: 2rem;
  text-align: center;
  height: 2rem;
}
.bt:hover{
  background: rgba(36, 36, 36,0.4);

}
.title{
  font-size: 40px;
  font-weight: 700;
  position:absolute;
  top:5%;
}
.row1{
  width:90%;
  display: flex;
  justify-content: start;
  align-items: center;
  gap:1vw;
  font-size: 1.3rem;
  overflow: hidden;
}
.row1 text :nth-child(1){
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.longText{
  padding:0.5rem;
  font-size: 1rem;
  line-height: 1.5rem;
  background:rgba(191, 225, 241,0.4);
  width:90%;
  height: 4rem;
  overflow-y: scroll;
}
.input{
  font-size: 1.5rem;
  border: 0.1rem solid red;
  flex:1;
  height: 2rem;
  text-align: start;
}