/* pages/exercises/createExe/pages/tab2/index.wxss */
.container{
  width: 100%;
  height: fit-content;
  display: flex;
  flex-direction: column;
  gap:40rpx
}
.canvas_container{
  position: relative;
  display: flex;
  z-index: 100;
  height: 450rpx;
}
.canvas{
  z-index: 1001;
  position: absolute;
  width: 100%;
  height: 450rpx;
  background: #ddebf1;
}
.items{
  margin-top: 30rpx;
  display: flex;
  gap: 40rpx;
  flex-wrap: wrap;

}
.bt{
  width: 200rpx;
}
.terms{
  display: flex;
  justify-content: flex-start;
  padding: 0 20rpx;
  gap:30rpx;
  font-size:30rpx
}


.Content{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  letter-spacing: 3rpx;
  gap: 30rpx;
}
.options{
  display: flex;
  flex-direction: column;
  gap:20rpx;
}
.option{
  display: flex;
  gap:20rpx;
  border:5rpx solid rgba(66, 202, 154,0);
  border-radius: 2%;
  padding: 10rpx;
}
.active{
  border:5rpx solid rgba(66, 202, 154,1);
  background: rgba(66, 202, 154,0.5);
}
.hover{
  border:5rpx solid rgba(66, 202, 154,0.2);
  background: rgba(66, 202, 154,0.2);
}
.point{
  font-weight: bold;
}
.point::before{
  content: "（ ";
}
.point::after{
  content: "分 ）";
}
.changeAble{
  background: rgba(66, 202, 154,0.7);
}