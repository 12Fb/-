/* pages/exercises/Components/exeCard/index.wxss */

.card {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  position: relative;
  background: #baf5ba;
  padding: 20rpx;
  border-radius: 3%;
  height: fit-content;
  width: 660rpx;
  box-sizing: border-box;
}
.row{
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap:10rpx;
}
.col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.name {
  font-size: 40rpx;
  font-weight: bolder;
}
.type{
  opacity: 0.7;
  font-weight: 900;
}
.description {
  max-width: 75%;
  height: fit-content;
  line-height: 1.2;
  letter-spacing: 1rpx;
  font-size: 30rpx;
  opacity: 0.5;
  font-weight: 900;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
}
.tags {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}
.hover-class{
  box-shadow: 0 0 20rpx rgb(31, 30, 30) ;
}
